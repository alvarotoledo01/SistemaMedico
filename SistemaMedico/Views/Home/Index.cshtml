@{
    ViewData["Title"] = "Pagina de inicio";
}
<div class="container mt-4">
    <div class="row">
        <div class="col-12 text-center">
            <h1 class="display-4">Bienvenido al Sistema Médico</h1>
            <p class="lead">Gestione pacientes, citas y estadísticas de manera sencilla y eficiente.</p>

            <!-- Tarjeta de Iniciar Sesión -->
            <div class="card mx-auto mt-4 shadow-sm" style="max-width: 22rem;">
                <div class="card-body text-center">
                    <h5 class="card-title">¿Eres un usuario registrado?</h5>
                    <p class="card-text">Inicia sesión para acceder a las funcionalidades completas del sistema.</p>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Iniciar Sesión</a>
                </div>
            </div>

            <hr class="my-4" />
        </div>
    </div>

    <!-- Sección de Información o Noticias -->
    <div class="row mt-5">
        <div class="col-12">
            <h2 class="text-center">Últimas Noticias</h2>
            <p class="text-muted text-center">Mantente informado sobre las actualizaciones del sistema.</p>
            <div class="alert alert-info" role="alert">
                <strong>Actualización:</strong> La nueva funcionalidad para exportar reportes ya está disponible. <a href="#" class="alert-link">Leer más...</a>
            </div>
        </div>
    </div>
</div>