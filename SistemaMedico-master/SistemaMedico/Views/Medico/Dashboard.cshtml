        </div>

        <!-- Plantillas Evolución -->
        <div class="plantillas-evolucion">
            <h3>Plantillas Evolución</h3>
            <button class="btn-nuevo" onclick="showDiagnosticosModal()">Nuevo</button>
        </div>
    </div>
</div>

<!-- Ventana Emergente de Diagnósticos -->
<div id="diagnosticosModal" class="modal">
    <div class="modal-content">
        <span class="close" onclick="closeDiagnosticosModal()">&times;</span>
        <h3>Seleccionar Diagnóstico</h3>
        <input type="text" placeholder="Buscar diagnóstico...">
        <button class="btn-seleccionar">Seleccionar</button>
    </div>
</div>

<script>
    function showDiagnosticosModal() {
        document.getElementById("diagnosticosModal").style.display = "block";
    }

    function closeDiagnosticosModal() {
        document.getElementById("diagnosticosModal").style.display = "none";
    }
</script>
